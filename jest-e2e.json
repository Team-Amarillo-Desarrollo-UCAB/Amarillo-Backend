{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "testRegex": "spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "preset": "ts-jest",
  "testPathIgnorePatterns": ["\\\\node_modules\\\\"],
  "setupFilesAfterEnv": ["tsconfig-paths/register"],
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  }
}